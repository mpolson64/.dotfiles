" General
set nocompatible
set autoread
set rnu
set ruler
set laststatus=2

" Keybinds
let mapleader=','

" Indentation
set autoindent
set smartindent
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set expandtab

" Enable loading the plugin/indent files for specific file types
filetype plugin indent on
